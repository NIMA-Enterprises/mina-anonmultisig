{
	"name": "anonmultisig",
	"private": true,
	"version": "1.0.0",
	"scripts": {
		"prestart": "yarn workspace contracts build",
		"start:staging": "DEBUG=vite:plugin:mkcert HTTPS=true vite --host --mode staging",
		"start:prod": "DEBUG=vite:plugin:mkcert HTTPS=true vite --host --mode prod",
		"start:host": "concurrently \"yarn start:staging\" \"yarn workspace ngrokqr start -p https://localhost:3000\"",
		"build:staging": "yarn run clean:vite && vite build --mode staging",
		"build:prod": "yarn run clean:vite && vite build --mode prod",
		"deploy:staging": "yarn run build:staging && firebase use staging && firebase deploy",
		"deploy:prod": "yarn run build:prod && firebase use prod && firebase deploy",
		"lint": "TIMING=1 eslint src/**/*.ts* --fix",
		"lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
		"clean": "yarn clean:vite && yarn clean:yarn",
		"clean:vite": "rimraf ./.cache ./dist",
		"clean:yarn": "rimraf ./node_modules"
	},
	"dependencies": {
		"@floating-ui/react": "^0.19.2",
		"@headlessui/react": "^1.7.13",
		"@reduxjs/toolkit": "^1.9.1",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@tanstack/react-table": "^8.8.4",
		"@tremor/react": "^1.8.0",
		"buffer": "^6.0.3",
		"business-logic-anonmultisig": "*",
		"classnames": "^2.3.1",
		"concurrently": "^8.0.1",
		"dayjs": "^1.11.7",
		"framer-motion": "^8.0.1",
		"react": "^18.2.0",
		"react-children-utilities": "^2.8.0",
		"react-device-detect": "^2.2.2",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^3.1.4",
		"react-redux": "^8.0.5",
		"react-router-dom": "^6.4.4",
		"react-toastify": "^9.0.7",
		"tailwind-merge": "^1.8.1",
		"truncate-eth-address": "^1.0.2",
		"usehooks-ts": "^2.6.0",
		"vite-plugin-server-headers": "^0.0.0",
		"wagmi": "^0.12.9",
		"wallet-connection": "*",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@esbuild-plugins/node-globals-polyfill": "^0.2.3",
		"@types/prettier": "^2.6.3",
		"@types/react": "^18.0.33",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.21",
		"react-polymorphed": "^2.1.0",
		"rimraf": "^3.0.2",
		"rollup-plugin-node-polyfills": "^0.2.1",
		"rollup-plugin-visualizer": "^5.9.0",
		"tailwindcss": "^3.2.4",
		"tailwindcss-debug-screens": "^2.2.1",
		"typescript": "^4.7.4",
		"vite": "^4.2.1",
		"vite-plugin-mkcert": "^1.14.0",
		"vite-tsconfig-paths": "^4.0.8",
		"wait": "^0.4.2"
	}
}
